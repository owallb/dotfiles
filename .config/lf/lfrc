# set previewer ~/.config/lf/pv_sandbox.sh
# map i $~/.config/lf/pv_sandbox.sh $f | less -R

set preview false
set ratios 1
set hidden true
set info perm:user:group:size:time
set promptfmt "\033[34;1m%d\033[0m"
set incsearch true
set incfilter true
set period 1

cmd trash ${{
    echo "Selected file(s):"
    for file in $fx; do
        echo "  $file"
    done
    printf "Send to trash? [y/N] "
    read -n1 ans
    echo
    case "$ans" in
        [Yy])
            for file in $fx; do
                gio trash -- $file
            done
            ;;
        *)
            ;;
    esac
}}

# map f filter
# map j updir
# map k down
# map l up
# map ; open

map D trash
